<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button
            android:text="basic_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_basic_image_activity"
            android:onClick="clickBasicImageActivityBtn" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"/>
    <Button
            android:text="basic_photo_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_basic_photo_view" app:layout_constraintStart_toStartOf="parent"
            android:onClick="clickBasicPhotoViewActivityBtn"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_basic_image_activity"/>

    <Button
            android:text="photo_view_can_select_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_photo_view_can_select_image" app:layout_constraintStart_toStartOf="parent"
            android:onClick="clickPhotoViewCanSelectImageActivityBtn"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_basic_photo_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>